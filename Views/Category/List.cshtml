@{
}

@model List<ProductionMVC.Models.Category>

<h1>Categories Table </h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>CategoryName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId">View details</a>
                </td>
            </tr>
        }
    </tbody>
</table>